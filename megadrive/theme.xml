<theme>
	<formatVersion>4</formatVersion>
	<include>./../mpcore.xml</include>

	<view name="system, basic, detailed">

		<image name="background" extra="true">
			<color>B22222</color>
		</image>

		<image name="logo">
			<path>./art/system.svg</path>
		</image>

		<image name="console" extra="true">
			<path>./art/controller.svg</path>
		</image>

	</view>

	<view name="system">

		<text name="system_description" extra="true">
			<text>The Sega Genesis is a fourth-generation video game console developed and produced by Sega. It was originally released in Japan in 1988 as Mega Drive, then in North America in 1989 as Sega Genesis, and in Europe, Australia and other PAL regions in 1990 as Mega Drive.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./art/screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./art/screenshot2.jpg</path>
		</image>
	</view>

	<view name="basic, detailed">

		<textlist name="gamelist">
			<selectorColor>B2222288</selectorColor>
		</textlist>

	</view>
	
</theme>