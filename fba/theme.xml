<theme>
	<formatVersion>4</formatVersion>
	<include>./../mpcore.xml</include>

	<view name="system, basic, detailed">

		<image name="background" extra="true">
			<color>cf582a</color>
		</image>

		<image name="logo">
			<path>./art/system.png</path>
		</image>

		<image name="console" extra="true">
			<path>./art/controller.svg</path>
		</image>

	</view>

	<view name="system">

		<text name="system_description" extra="true">
			<text>Final Burn Alpha is a Multiple Arcade Emulator most popular for emulating Neo-Geo, Capcom, Konami, and Cave games.</text>
		</text>

		<image name="screenshot_left" extra="true">
			<path>./art/screenshot1.jpg</path>
		</image>
		<image name="screenshot_right" extra="true">
			<path>./art/screenshot3.jpg</path>
		</image>
	</view>

	<view name="basic, detailed">

		<textlist name="gamelist">
			<selectorColor>cf582a88</selectorColor>
		</textlist>

	</view>
	
</theme>